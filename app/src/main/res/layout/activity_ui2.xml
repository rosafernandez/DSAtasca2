<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ui2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eetac.dsa.calculadora2.UI2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Historial"
        android:layout_centerHorizontal="true"
        android:id="@+id/textCapçalera2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textCapçalera2"
        android:id="@+id/llista"
        android:background="@drawable/border"
        android:padding="10dp">

    </TextView>
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/llista"
        android:id="@+id/numoperacio"
        android:hint="Escollir càlcul (n. fila)"
        android:inputType="phone"
        android:digits="1234567890"
        android:background="@drawable/border"
        android:padding="10dp"
        />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llista"
        android:layout_marginTop="10dp"
        android:text="Retorna"
        android:id="@+id/retorna"
        android:background="@color/colorResultat"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numoperacio"
        android:layout_marginTop="30dp"
        android:text="Esborrar historial"
        android:textColor="@color/colorBlanc"
        android:id="@+id/esborrarHist"
        android:background="@color/colorResultat"
        android:layout_centerHorizontal="true"
        android:onClick="onClickBorrarHistorial"

        />
</RelativeLayout>
